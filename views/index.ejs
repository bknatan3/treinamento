header {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    color: #fff;
    padding: 10px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 1000;
}

header .logo {
    font-size: 24px;
    font-weight: bold;
    text-transform: uppercase;
    color: #f8f8f8;
}

header nav a {
    color: #f8f8f8;
    text-decoration: none;
    margin: 0 15px;
    font-size: 16px;
    transition: color 0.3s;
}

header nav a:hover {
    color: #ff5c5c;
}

/* Hero Section */
.hero {
    display: flex;
    align-items: center;
    justify-content: center;
    background: url('imagem-de-fundo.jpg') no-repeat center center;
    background-size: cover;
    height: 80vh;
    color: #fff;
    text-align: center;
    padding: 20px;
}

.hero h1 {
    font-size: 48px;
    font-weight: bold;
}

.hero p {
    font-size: 18px;
    margin-top: 10px;
    max-width: 600px;
}

.hero .cta-button {
    background-color: #ff5c5c;
    color: #fff;
    padding: 10px 20px;
    font-size: 18px;
    border: none;
    border-radius: 5px;
    margin-top: 20px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.hero .cta-button:hover {
    background-color: #ff3232;
}

/* Grid de Modelos */
.models-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    padding: 40px 20px;
    margin-top: 20px;
}

.model-card {
    background-color: #fff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s;
}

.model-card:hover {
    transform: translateY(-5px);
}

.model-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
}

.model-card h3 {
    font-size: 20px;
    margin: 15px;
    color: #333;
}

.model-card p {
    font-size: 14px;
    color: #666;
    margin: 0 15px 15px;
}

/* Responsividade */
@media (max-width: 768px) {
    .hero h1 {
        font-size: 36px;
    }
    .hero p {
        font-size: 16px;
    }
    header nav {
        font-size: 14px;
    }
}
